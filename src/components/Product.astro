---
import type { PLPProductCard } from "../types";

interface Props {
  product: PLPProductCard;
}

const { product } = Astro.props;
---

<>
  {
    product ? (
      <div class="max-w-sm rounded overflow-hidden shadow-lg bg-white">
        <img
          width={300}
          height={200}
          class="w-full h-48 object-cover"
          src={product.thumbnail}
          alt={product.title}
        />

        <div class="p-4">
          <h2 class="text-xl font-bold text-gray-900 line-clamp-2">
            {product.title}
          </h2>
          <p class="text-gray-600 text-sm mt-2 line-clamp-3">
            {product.description}
          </p>
          <div class="flex flex-col justify-between items-start gap-4 mt-4">
            <span class="text-lg font-semibold text-gray-800">
              ${product.price}
            </span>
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none">
              Add to Cart
            </button>
          </div>
        </div>
      </div>
    ) : null
  }
</>
